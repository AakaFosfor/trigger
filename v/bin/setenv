  alias miclock="echo -e 'miclockold  -old, command line version\n'; java -jar ~/jmiclock/MiClockGui.jar"
elif [ "$HN" = 'alidcscom707' -o "$HN" = 'alidcscom521' ] ;then
  export CCRFS=''
  export CLRFS=''
  #export ULT=/usr/local/trigger
else
  #export ULT=/usr/local/trigger
  export CCRFS=''
  export CLRFS=''
