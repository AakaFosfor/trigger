if [ "$VMESITE" = 'ALICE' ] ;then
alias ssh1="ssh $XY trigger@alidcsvme001"
alias ssh2="ssh $XY trigger@alidcsvme002"
alias ssh3="ssh $XY trigger@alidcsvme003"
