  export tr26='trigger@alidcscom026'
  export tr188='trigger@alidcscom188'
  export tr521='trigger@alidcscom521'
elif [ $HN = 'pcalicebhm10' ] ;then
  export CCRFS=/home/dl/root
  export CLRFS=/home/dl/snapshot
  export logctp=$CLRFS/alidcsvme001/home/alice/v/vme/WORK
  #export ULT=$CCRFS/usr/local/trigger
  export tr1='trigger@altri1'
  export tr2='trigger@altri2'
  export trp2='trigger@altri2'
  alias miclockold="$VMECFDIR/ttcmidaemons/miclock.py"
  alias miclock="echo -e 'miclockold  -old, command line version\n'; cd ~/jmiclock; java -jar MiClockGui.jar"
elif [ $HN = 'alidcscom188' ] ;then
  export CCRFS=/data/dl/root
  export CLRFS=/data/dl/snapshot
  export logctp=$CLRFS/alidcsvme001/home/alice/v/vme/WORK
  export tr26='trigger@alidcscom026'
  export tr27='trigger@alidcscom027'
  export tr521='trigger@alidcscom521'
  alias ctp="ssh -q -2 -f trigger@alidcsvme001 vmecrate nbi ctp"
  alias fanin=$ULT/bin/fanin
  alias dcson='rdesktop -g1280x1024 alitrion001'
